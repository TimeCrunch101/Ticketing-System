<div class="container" style="background-color: rgba(51, 51, 51, 0.733);max-width:400px;border-radius: 1em;padding:15px 15px;margin-top:2em">
    <h1 style="margin-top: .5em;text-align:center">LOGIN</h1>
    {{#if message}}
        <div class="alert alert-danger" role="alert">
            {{message}}
        </div>
    {{/if}}
    {{#if msg}}
        <div class="alert alert-danger" role="alert">
            {{msg}}
        </div>
    {{/if}}
        <form method="POST" action="/login">
            <div class="mb-3">
                <label for="email" class="form-label" style="color: white;">Email Address:</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label" style="color: white;">Password:</label>
                <input type="password" class="form-control" name="password">
            </div>
            <div class="col-12" style="display: flex; justify-content:space-around">
                <button onclick="loadSpinner()" type="submit" class="btn btn-primary" style="background-color: #04AA6D;border: none;"><i class="fas fa-key" style="margin-right: 5px;"></i>LOGIN</button>
            </div>
        </form>
        <a href="/forgotPassword"><button style="margin-top: 2em;" class="btn btn-secondary">Forgot Password</button></a>
</div>
