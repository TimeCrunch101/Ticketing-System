<div class="createForm">
        <h3>Create User</h3>
        <form action="/User/Create" method="post">
            <label for="firstName">First Name</label>
            <input type="text" name="firstName" id="firstName" required>
            <label for="lastName">Last Name</label>
            <input type="text" name="lastName" id="lastName" required>
            <label for="email">Email Address</label>
            <input type="text" name="email" required>
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required>
            <label for="cellNum">Cellphone Number</label>
            <input type="tel" name="cellNum" id="cellNum" required>
            <br>
            <input class="form-check-input" type="checkbox" name="isAdmin">
            <label class="form-check-label" for="isAdmin" style="margin-bottom: 2em;">Admin</label>
            <br>
            <button type="submit" class="btn btn-primary" style="margin-top: 5px;">Submit</button>
        </form>  
</div>